{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Hono API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/packages/api/src/main.ts",
            "runtimeExecutable": "deno",
            "console": "internalConsole",
            "runtimeArgs": [
                "--env-file",
                "--watch"
            ],
            "restart": true,
            "outputCapture": "std",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "cwd": "${workspaceFolder}/packages/api" 
        }
    ]
}
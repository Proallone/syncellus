{
  "name": "@syncellus/root",
  "version": "1.0.0",
  "description": "Small timesheets app",
  "repository": "https://github.com/Proallone/timesheets.git",
  "author": "proallone <proallone14@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "yarn workspace @syncellus/server watch",
    "dev:frontend": "yarn workspace @syncellus/client dev",
    "lint": "eslint 'packages/**/*.{ts,tsx}'",
    "format": "NODE_OPTIONS='--experimental-strip-types' prettier packages/ --write",
    "ci": "yarn install --frozen-lockfile"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "concurrently": "^9.2.0",
    "prettier": "3.6.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
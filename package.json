{
    "name": "@syncellus/root",
    "type": "module",
    "version": "1.0.0",
    "description": "Small and modular timesheets app",
    "repository": "https://github.com/Proallone/timesheets.git",
    "author": "proallone <proallone14@gmail.com>",
    "private": true,
    "license": "MIT",
    "scripts": {
        "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
        "dev:server": "yarn workspace @syncellus/server watch",
        "dev:client": "yarn workspace @syncellus/client dev",
        "lint": "eslint 'packages/**/*.{ts,tsx}'",
        "format": "NODE_OPTIONS='--experimental-strip-types' prettier packages/ --write",
        "ci": "yarn install --frozen-lockfile",
        "build": "tsc --build"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "concurrently": "^9.2.0",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "lint-staged": "^16.1.4",
        "prettier": "3.6.2",
        "simple-git-hooks": "^2.13.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.36.0"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "pre-push": "yarn run format",
        "preserveUnused": true
    },
    "lint-staged": {
        "!(*.lock|.gitignore)": [
            "yarn lint",
            "yarn format"
        ]
    }
}

{
  "imports": {
    "@kysely-org/kysely-ctl": "jsr:@kysely-org/kysely-ctl@^0.12.2",
    "@syncellus/hono/": "./src/",
    "hono": "jsr:@hono/hono@^4.10.1",
    "kysely": "npm:kysely@^0.28.8",
    "kysely-codegen": "npm:kysely-codegen@^0.19.0",
    "pg": "npm:pg@^8.16.3"
  },
  "tasks": {
    "start": "deno run --allow-net --env-file src/main.ts",
    "watch": "deno run --watch -A --env-file src/main.ts",
    "db:up": "kysely migrate:latest && deno run db:postup",
    "db:codegen": "kysely-codegen --out-file ./src/types/database.d.ts",
    "db:postup": "deno run db:codegen && deno run db:seed",
    "db:seed": "kysely seed run",
    "db:down": "kysely migrate:rollback --all"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}

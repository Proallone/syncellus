{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmit": false,
        "composite": true,
        "paths": {
            "@syncellus/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/types/**/*.d.ts"],
    "exclude": ["node_modules"]
}

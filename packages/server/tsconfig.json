{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmit": false,
        "composite": true,
        "paths": {
            "@syncellus/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "**/*.test.ts"],
    "files": [],
    "references": [{ "path": "./tsconfig.test.json" }]
}

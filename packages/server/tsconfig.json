{
    "compilerOptions": {
        "outDir": "./dist" /* Output directory for backend compiled files */,
        "rootDir": "./src" /* Root directory of the source files */,
        "baseUrl": "./",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmit": false,
        "composite": true,
        "paths": {
            "@syncellus/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "test/**/*.ts", "test/**/*.d.ts"],
    "exclude": ["node_modules", "dist"],
    "references": []
}

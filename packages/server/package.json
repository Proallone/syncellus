{
    "name": "@syncellus/server",
    "version": "1.0.0",
    "description": "Syncellus application server",
    "license": "ISC",
    "author": "Proallone",
    "type": "module",
    "main": "src/server.js",
    "scripts": {
        "start": "tsx --env-file=.env src/server.ts",
        "start:dist": "node dist/server.js",
        "watch": "DEBUG=* tsx watch --env-file=.env src/server.ts | pino-pretty",
        "watch:prod": "NODE_ENV=production DEBUG=* tsx watch --env-file=.env src/server.ts | pino-pretty",
        "test": "vitest --reporter=verbose",
        "test:cov": "vitest run --coverage",
        "up": "kysely migrate:up",
        "postup": "kysely seed run",
        "down": "kysely migrate:down",
        "build": "tsc --build",
        "format": "NODE_OPTIONS='--experimental-strip-types' prettier . --config ../../prettier.config.ts --write"
    },
    "dependencies": {
        "argon2": "^0.44.0",
        "better-sqlite3-multiple-ciphers": "^12.2.0",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-rate-limit": "^8.0.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "kysely": "^0.28.3",
        "nanoid": "^5.1.5",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pino": "^9.7.0",
        "pino-http": "^10.5.0",
        "uuidv7": "^1.0.2",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.0.10",
        "@types/passport": "^1.0.17",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/supertest": "^6.0.3",
        "@vitest/coverage-v8": "3.2.4",
        "globals": "^16.3.0",
        "kysely-ctl": "^0.17.0",
        "pino-pretty": "^13.0.0",
        "supertest": "^7.1.4",
        "tsx": "^4.20.3",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}
